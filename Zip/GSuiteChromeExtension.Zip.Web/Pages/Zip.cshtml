@page "/zip"

@inject WebSettings webSettings;

@{
    var title = this.texts.GetText("Zip_Title");

    this.ViewBag.Title = title;
}

<div id="loader"
     data-client-id="1004208430494-nt8ddb8anbejrr2td4ofanmhcqd9cp3j.apps.googleusercontent.com"
     data-scope="https://www.googleapis.com/auth/drive.file"
     data-api-key="AIzaSyDALCcdwqAA5lyHli6HFoMtQT_-1WEER6g"
     data-proj="1004208430494"
     data-server="@(this.webSettings.ApiServer)"></div>

<h2>@(title)</h2>
<p>@this.texts.GetText("Zip_Description")</p>

<hr />

<div class="text-center">
    <div id="sp-0" class="sp sp-wide">
        <p class="text-right"><span>@this.texts.GetText("SponsoredLink")</span></p>

        <div class="sp-container">
            <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script> <!-- 728 x 90 --> <ins class="adsbygoogle" style="display:inline-block;width:728px;height:90px" data-ad-client="ca-pub-6475235154742772" data-ad-slot="1982829070"></ins>
            <script>(adsbygoogle = window.adsbygoogle || []).push({});</script>
        </div>
    </div>
</div>

<hr />

<p class="text-info">@this.texts.GetText("Zip_HelpChooseFile")</p>

<div class="form-group row">
    <label class="col-lg-3 col-form-label">
        <input type="radio" name="opt-file-input" value="upload" checked />
        @this.texts.GetText("File_Upload")
    </label>
    <div class="col-lg-9">
        <input id="txt-upload-files" type="file" multiple class="form-control" disabled />
    </div>
</div>
<div class="form-group row">
    <label class="col-lg-3 col-form-label">
        <input type="radio" name="opt-file-input" value="drive" />
        @this.texts.GetText("File_Drive")
    </label>
    <div class="col-lg-9">
        <button id="btn-pick-drive" type="button" class="btn" disabled>
            <img src="~/img/logo-drive.png" class="img-inline" />
            @this.texts.GetText("File_DriveSelect")
        </button>

        <span id="lbl-drive-files">@this.texts.GetText("File_NoFile")</span>
    </div>
</div>

<hr />

<div class="form-group row">
    <label class="col-lg-3 col-form-label text-info" for="cbo-output">
        @this.texts.GetText("Zip_OutputExtension")
    </label>
    <div class="col-lg-9">
        <select id="cbo-output" class="form-control">
            <option value="7z" selected>7z (7zip)</option>
            <option value="zip">zip</option>
            <option value="rar">rar</option>
            <option value="wim">wim</option>
        </select>
    </div>
</div>

<hr />

<div class="row">
    <div class="col-lg-3"></div>
    <div id="pnl-actions" class="col-lg-9">
        <div>
            <button id="btn-zip-download" class="btn btn-primary m-r-5">
                @this.texts.GetText("Zip_Download")
            </button>

            <button id="btn-zip-save-drive" class="btn">
                <img src="~/img/logo-drive.png" class="img-inline" />
                @this.texts.GetText("Zip_SaveDrive")
            </button>
        </div>
        <p id="lbl-working" class="text-warning mt-1 invisible">@this.texts.GetText("File_Processing")</p>
    </div>

</div>

<hr />

<div class="text-center">
    <div id="sp-0" class="sp sp-wide">
        <p class="text-right"><span>@this.texts.GetText("SponsoredLink")</span></p>

        <div class="sp-container">
            <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script> <!-- 728 x 90 --> <ins class="adsbygoogle" style="display:inline-block;width:728px;height:90px" data-ad-client="ca-pub-6475235154742772" data-ad-slot="1982829070"></ins>
            <script>(adsbygoogle = window.adsbygoogle || []).push({});</script>
        </div>
    </div>
</div>

<div id="diag-save-to-drive" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <img class="img-inline" src="~/img/logo-drive.png" />
                    <span>@this.texts.GetText("SaveToDrive_Title")</span>
                </h5>
            </div>

            <div class="modal-body">
                <p>@this.texts.GetText("SaveToDrive_Help")</p>

                <div id="btn-save-to-drive" class="btn-save-to-drive"></div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">@this.texts.GetText("Dialog_Close")</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    <script defer src="https://apis.google.com/js/platform.js"></script>
    
    <script defer src="~/js/common.js" asp-append-version="true"></script>
    <script defer src="~/js/zip.js" asp-append-version="true"></script>

    <script defer src="https://apis.google.com/js/api.js?onload=onGoogleApiLoaded"></script>


}